    <!-- Main Container -->
    <div class="container-fluid main-container px-4">
        <!-- Breadcrumb -->
        <div class="breadcrumb-section fade-in-up">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="/dashboard">
                            <i class="fas fa-home me-1"></i>Inicio
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="/clientes/calendario">
                            <i class="fas fa-calendar-alt me-1"></i>Calendario
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        Agendar Nueva Visita
                    </li>
                </ol>
            </nav>
        </div>

        <!-- Page Header -->
        <div class="page-header fade-in-up stagger-1">
            <div class="page-header-icon">
                <i class="fas fa-calendar-plus"></i>
            </div>
            <h1>Agendar Nueva Visita</h1>
            <p>Solicita una visita técnica especializada para gestión de residuos</p>
        </div>

        <!-- Success Message -->
        <div class="success-message fade-in-up" id="successMessage">
            <div class="success-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <h3>¡Solicitud Enviada Exitosamente!</h3>
            <p>Hemos recibido tu solicitud de visita técnica. Nuestro equipo se contactará contigo dentro de las próximas 24 horas para confirmar fecha y hora.</p>
            <div style="margin-top: 1.5rem;">
                <a href="/clientes/calendario" class="btn-outline-custom" style="border-color: white; color: white;">
                    <i class="fas fa-calendar-alt"></i>
                    Volver al Calendario
                </a>
            </div>
        </div>

        <!-- Form Container -->
        <div class="form-container fade-in-up stagger-2" id="formContainer">
            <div class="form-header">
                <h2 class="form-title">
                    <i class="fas fa-clipboard-list"></i>
                    Información de la Visita
                </h2>
            </div>

            <form id="visitaForm" class="form-body" novalidate>
                <!-- Información Básica -->
                <div class="form-section">
                    <h3 class="section-title">
                        <i class="fas fa-info-circle"></i>
                        Información Básica
                    </h3>
                    
                    <div class="form-grid">
                        <div class="form-group">
                            <label class="form-label required">
                                <i class="fas fa-cogs"></i>
                                Tipo de Visita
                            </label>
                            <select class="form-select" id="tipoVisita" required>
                                <option value="">Seleccionar tipo de visita</option>
                                <option value="evaluacion">Evaluación de Residuos</option>
                                <option value="retiro">Retiro de Materiales</option>
                                <option value="inspeccion">Inspección Técnica</option>
                                <option value="seguimiento">Seguimiento Post-Servicio</option>
                                <option value="consultoria">Consultoría Ambiental</option>
                                <option value="capacitacion">Capacitación</option>
                            </select>
                            <div class="form-text">Selecciona el tipo de servicio que necesitas</div>
                        </div>

                        <div class="form-group">
                            <label class="form-label required">
                                <i class="fas fa-calendar-day"></i>
                                Fecha Preferida
                            </label>
                            <input type="date" class="form-control" id="fechaVisita" required>
                            <div class="form-text">Selecciona tu fecha preferida (mínimo 48 horas de anticipación)</div>
                        </div>
                    </div>

                    <div class="form-grid">
                        <div class="form-group">
                            <label class="form-label required">
                                <i class="fas fa-clock"></i>
                                Hora Preferida
                            </label>
                            <select class="form-select" id="horaVisita" required>
                                <option value="">Seleccionar hora</option>
                                <option value="08:00">08:00 AM</option>
                                <option value="09:00">09:00 AM</option>
                                <option value="10:00">10:00 AM</option>
                                <option value="11:00">11:00 AM</option>
                                <option value="12:00">12:00 PM</option>
                                <option value="14:00">02:00 PM</option>
                                <option value="15:00">03:00 PM</option>
                                <option value="16:00">04:00 PM</option>
                                <option value="17:00">05:00 PM</option>
                            </select>
                            <div class="form-text">Horarios de atención: Lunes a Viernes 8:00 AM - 6:00 PM</div>
                        </div>

                        <div class="form-group">
                            <label class="form-label required">
                                <i class="fas fa-exclamation-triangle"></i>
                                Prioridad
                            </label>
                            <div class="priority-options">
                                <div class="priority-option">
                                    <input type="radio" id="priority-normal" name="prioridad" value="normal" class="priority-radio" checked>
                                    <label for="priority-normal" class="priority-label priority-normal">
                                        <i class="fas fa-circle priority-icon"></i>
                                        <span>Normal</span>
                                    </label>
                                </div>
                                <div class="priority-option">
                                    <input type="radio" id="priority-alta" name="prioridad" value="alta" class="priority-radio">
                                    <label for="priority-alta" class="priority-label priority-alta">
                                        <i class="fas fa-exclamation priority-icon"></i>
                                        <span>Alta</span>
                                    </label>
                                </div>
                                <div class="priority-option">
                                    <input type="radio" id="priority-urgente" name="prioridad" value="urgente" class="priority-radio">
                                    <label for="priority-urgente" class="priority-label priority-urgente">
                                        <i class="fas fa-exclamation-triangle priority-icon"></i>
                                        <span>Urgente</span>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Ubicación -->
                <div class="form-section">
                    <h3 class="section-title">
                        <i class="fas fa-map-marker-alt"></i>
                        Ubicación y Contacto
                    </h3>
                    
                    <div class="form-group">
                        <label class="form-label required">
                            <i class="fas fa-building"></i>
                            Dirección Completa
                        </label>
                        <textarea class="form-control" id="direccion" rows="3" placeholder="Ingresa la dirección completa donde se realizará la visita (calle, número, comuna, ciudad)" required></textarea>
                        <div class="form-text">Incluye referencias y puntos de interés cercanos</div>
                    </div>

                    <div class="form-grid">
                        <div class="form-group">
                            <label class="form-label required">
                                <i class="fas fa-user"></i>
                                Persona de Contacto
                            </label>
                            <input type="text" class="form-control" id="contactoNombre" placeholder="Nombre completo" required>
                        </div>

                        <div class="form-group">
                            <label class="form-label required">
                                <i class="fas fa-phone"></i>
                                Teléfono de Contacto
                            </label>
                            <input type="tel" class="form-control" id="contactoTelefono" placeholder="+56 9 xxxx xxxx" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-envelope"></i>
                            Email de Contacto (Opcional)
                        </label>
                        <input type="email" class="form-control" id="contactoEmail" placeholder="email@ejemplo.com">
                        <div class="form-text">Para recibir confirmaciones y actualizaciones</div>
                    </div>
                </div>

                <!-- Detalles Adicionales -->
                <div class="form-section">
                    <h3 class="section-title">
                        <i class="fas fa-edit"></i>
                        Detalles de la Visita
                    </h3>
                    
                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-file-alt"></i>
                            Descripción y Observaciones
                        </label>
                        <textarea class="form-control" id="descripcion" rows="4" placeholder="Describe detalladamente el motivo de la visita, tipo de residuos a evaluar, cantidad estimada, etc."></textarea>
                        <div class="form-text">Proporciona toda la información relevante para preparar mejor la visita</div>
                    </div>

                    <div class="form-grid">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-weight-hanging"></i>
                                Cantidad Estimada
                            </label>
                            <input type="text" class="form-control" id="cantidadEstimada" placeholder="Ej: 500 kg, 2 toneladas, 10 contenedores">
                            <div class="form-text">Estimación aproximada del volumen o peso</div>
                        </div>

                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-recycle"></i>
                                Tipo de Residuo Principal
                            </label>
                            <select class="form-select" id="tipoResiduo">
                                <option value="">Seleccionar tipo</option>
                                <option value="electronico">Residuos Electrónicos</option>
                                <option value="papel">Papel y Cartón</option>
                                <option value="plastico">Plásticos</option>
                                <option value="metal">Metales</option>
                                <option value="aceite">Aceites Usados</option>
                                <option value="organico">Residuos Orgánicos</option>
                                <option value="peligroso">Residuos Peligrosos</option>
                                <option value="mixto">Residuos Mixtos</option>
                                <option value="otro">Otro</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Información Adicional -->
                <div class="info-card">
                    <h6>
                        <i class="fas fa-info-circle"></i>
                        Información Importante
                    </h6>
                    <ul>
                        <li>Las visitas técnicas tienen una duración estimada de 1-2 horas</li>
                        <li>Nuestro equipo contactará para confirmar la visita dentro de 24 horas</li>
                        <li>Para visitas urgentes, nos comunicaremos en un máximo de 4 horas</li>
                        <li>El técnico llevará todo el equipo necesario para la evaluación</li>
                        <li>Se proporcionará un informe detallado posterior a la visita</li>
                    </ul>
                </div>
            </form>

            <div class="form-actions">
                <div>
                    <a href="/clientes/calendario" class="btn-custom btn-outline-custom">
                        <i class="fas fa-arrow-left"></i>
                        Volver al Calendario
                    </a>
                </div>
                <div>
                    <button type="button" class="btn-custom btn-secondary-custom" onclick="limpiarFormulario()">
                        <i class="fas fa-undo"></i>
                        Limpiar Formulario
                    </button>
                    <button type="submit" class="btn-custom btn-primary-custom" onclick="enviarSolicitud()" id="submitBtn">
                        <i class="fas fa-calendar-plus"></i>
                        Enviar Solicitud
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Configuración inicial
        document.addEventListener('DOMContentLoaded', function() {
            setupDateRestrictions();
            setupFormValidation();
            setupKeyboardShortcuts();
        });

        // Configurar restricciones de fecha
        function setupDateRestrictions() {
            const fechaInput = document.getElementById('fechaVisita');
            const today = new Date();
            const minDate = new Date(today.getTime() + (48 * 60 * 60 * 1000)); // 48 horas mínimo
            
            const year = minDate.getFullYear();
            const month = String(minDate.getMonth() + 1).padStart(2, '0');
            const day = String(minDate.getDate()).padStart(2, '0');
            const minDateString = `${year}-${month}-${day}`;
            
            fechaInput.setAttribute('min', minDateString);
            
            // Validación adicional para días laborables
            fechaInput.addEventListener('change', function() {
                const selectedDate = new Date(this.value);
                const dayOfWeek = selectedDate.getDay();
                
                if (dayOfWeek === 0 || dayOfWeek === 6) { // Domingo o Sábado
                    mostrarAlerta('Por favor selecciona un día laborable (Lunes a Viernes)', 'warning');
                    this.value = '';
                }
            });
        }

        // Configurar validación del formulario
        function setupFormValidation() {
            const form = document.getElementById('visitaForm');
            const inputs = form.querySelectorAll('input[required], select[required], textarea[required]');
            
            inputs.forEach(input => {
                input.addEventListener('blur', validateField);
                input.addEventListener('input', clearErrors);
            });
        }

        // Validar campo individual
        function validateField(e) {
            const field = e.target;
            const value = field.value.trim();
            
            // Limpiar errores previos
            field.classList.remove('is-invalid');
            
            if (field.hasAttribute('required') && !value) {
                field.classList.add('is-invalid');
                return false;
            }
            
            // Validaciones específicas
            if (field.type === 'email' && value) {
                const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                if (!emailRegex.test(value)) {
                    field.classList.add('is-invalid');
                    return false;
                }
            }
            
            if (field.type === 'tel' && value) {
                const phoneRegex = /^(\+56|56)?[\s-]?[9][\s-]?[0-9]{4}[\s-]?[0-9]{4}$/;
                if (!phoneRegex.test(value.replace(/\s/g, ''))) {
                    field.classList.add('is-invalid');
                    return false;
                }
            }
            
            field.classList.add('is-valid');
            return true;
        }

        // Limpiar errores
        function clearErrors(e) {
            e.target.classList.remove('is-invalid');
        }

        // Configurar shortcuts de teclado
        function setupKeyboardShortcuts() {
            document.addEventListener('keydown', function(e) {
                if (e.ctrlKey) {
                    switch(e.key) {
                        case 's':
                            e.preventDefault();
                            enviarSolicitud();
                            break;
                        case 'r':
                            e.preventDefault();
                            limpiarFormulario();
                            break;
                        case 'Escape':
                            window.location.href = '/clientes/calendario';
                            break;
                    }
                }
            });
        }

        // Limpiar formulario
        function limpiarFormulario() {
            if (confirm('¿Estás seguro de que deseas limpiar todos los campos del formulario?')) {
                const form = document.getElementById('visitaForm');
                form.reset();
                
                // Limpiar clases de validación
                const inputs = form.querySelectorAll('.is-valid, .is-invalid');
                inputs.forEach(input => {
                    input.classList.remove('is-valid', 'is-invalid');
                });
                
                // Resetear prioridad a normal
                document.getElementById('priority-normal').checked = true;
                
                mostrarAlerta('Formulario limpiado correctamente', 'info');
            }
        }

        // Enviar solicitud
        function enviarSolicitud() {
            const form = document.getElementById('visitaForm');
            const submitBtn = document.getElementById('submitBtn');
            
            // Validar formulario
            if (!validarFormularioCompleto()) {
                mostrarAlerta('Por favor completa todos los campos requeridos correctamente', 'error');
                return;
            }
            
            // Mostrar estado de carga
            submitBtn.classList.add('loading');
            submitBtn.innerHTML = '<span class="spinner"></span> Enviando...';
            submitBtn.disabled = true;
            
            // Simular envío (aquí iría la llamada al servidor)
            setTimeout(() => {
                // Ocultar formulario y mostrar mensaje de éxito
                document.getElementById('formContainer').style.display = 'none';
                document.getElementById('successMessage').classList.add('show');
                
                // Scroll hacia arriba
                window.scrollTo({
                    top: 0,
                    behavior: 'smooth'
                });
                
                // Resetear botón
                submitBtn.classList.remove('loading');
                submitBtn.innerHTML = '<i class="fas fa-calendar-plus"></i> Enviar Solicitud';
                submitBtn.disabled = false;
                
                // Mostrar notificación adicional
                setTimeout(() => {
                    mostrarAlerta('¡Solicitud enviada exitosamente! Revisa tu email para confirmación.', 'success');
                }, 1000);
                
            }, 2000);
        }

        // Validar formulario completo
        function validarFormularioCompleto() {
            const form = document.getElementById('visitaForm');
            const requiredFields = form.querySelectorAll('[required]');
            let isValid = true;
            
            requiredFields.forEach(field => {
                if (!field.value.trim()) {
                    field.classList.add('is-invalid');
                    isValid = false;
                } else {
                    field.classList.remove('is-invalid');
                    field.classList.add('is-valid');
                }
            });
            
            // Validar prioridad (radio buttons)
            const prioridad = document.querySelector('input[name="prioridad"]:checked');
            if (!prioridad) {
                isValid = false;
            }
            
            return isValid;
        }

        // Mostrar alertas
        function mostrarAlerta(mensaje, tipo = 'info') {
            // Remover alerta existente
            const alertaExistente = document.querySelector('.alert-floating');
            if (alertaExistente) {
                alertaExistente.remove();
            }
            
            const colores = {
                'success': '#28a745',
                'warning': '#ffc107',
                'error': '#dc3545',
                'info': '#17a2b8'
            };
            
            const iconos = {
                'success': 'fas fa-check-circle',
                'warning': 'fas fa-exclamation-triangle',
                'error': 'fas fa-times-circle',
                'info': 'fas fa-info-circle'
            };
            
            const alerta = document.createElement('div');
            alerta.className = 'alert-floating fade-in-up';
            alerta.style.cssText = `
                position: fixed;
                top: 20px;
                right: 20px;
                background: white;
                border-left: 4px solid ${colores[tipo]};
                padding: 1rem 1.5rem;
                border-radius: 8px;
                box-shadow: 0 8px 30px rgba(0,0,0,0.12);
                z-index: 9999;
                max-width: 400px;
                display: flex;
                align-items: center;
                gap: 0.75rem;
            `;
            
            alerta.innerHTML = `
                <i class="${iconos[tipo]}" style="color: ${colores[tipo]}; font-size: 1.2rem;"></i>
                <span style="flex: 1; font-weight: 500;">${mensaje}</span>
                <button onclick="this.parentElement.remove()" style="background: none; border: none; font-size: 1.2rem; color: #999; cursor: pointer;">×</button>
            `;
            
            document.body.appendChild(alerta);
            
            // Auto-remover después de 5 segundos
            setTimeout(() => {
                if (alerta.parentElement) {
                    alerta.remove();
                }
            }, 5000);
        }

        // Dropdown de usuario
        function toggleDropdown() {
            const dropdown = document.getElementById('userDropdownMenu');
            dropdown.classList.toggle('show');
        }

        // Cerrar dropdown al hacer clic fuera
        document.addEventListener('click', function(e) {
            const dropdown = document.getElementById('userDropdownMenu');
            const button = document.getElementById('userDropdown');
            if (!button.contains(e.target) && !dropdown.contains(e.target)) {
                dropdown.classList.remove('show');
            }
        });

        // Auto-llenar algunos campos para demostración
        setTimeout(() => {
            if (window.location.search.includes('demo=true')) {
                document.getElementById('contactoNombre').value = 'María González';
                document.getElementById('contactoTelefono').value = '+56 9 8765 4321';
                document.getElementById('contactoEmail').value = 'maria.gonzalez@empresa.com';
                document.getElementById('direccion').value = 'Av. Libertador Bernardo O\'Higgins 1234, Santiago Centro, Santiago';
                document.getElementById('tipoVisita').value = 'evaluacion';
                document.getElementById('tipoResiduo').value = 'electronico';
                document.getElementById('cantidadEstimada').value = '50 computadores obsoletos';
                document.getElementById('descripcion').value = 'Evaluación para retiro de equipos informáticos obsoletos de oficinas corporativas.';
                
                mostrarAlerta('Formulario pre-llenado para demostración', 'info');
            }
        }, 1000);

        // Mensaje de bienvenida
        setTimeout(() => {
            mostrarAlerta('Completa el formulario para solicitar tu visita técnica', 'info');
        }, 500);
    </script>
