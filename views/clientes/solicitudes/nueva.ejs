                <!-- Observaciones -->
                <div class="form-card fade-in-up stagger-6">
                    <div class="card-header-custom">
                        <h4 class="card-title">
                            <i class="fas fa-sticky-note"></i>
                            Observaciones Adicionales
                        </h4>
                    </div>
                    <div class="card-body-custom">
                        <label class="form-label" for="observaciones">Comentarios y Observaciones</label>
                        <textarea class="form-control" id="observaciones" name="observaciones" rows="4" placeholder="Incluya cualquier información adicional relevante: condiciones especiales, horarios de acceso, equipos necesarios, etc."></textarea>
