                <!-- Botones de Acción -->
                <div class="form-actions fade-in-up stagger-7">
                    <a href="/clientes/solicitudes" class="btn-cancelar">
                        <i class="fas fa-arrow-left"></i>
                        Cancelar
                    </a>
