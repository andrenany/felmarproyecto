    <!-- Loading Overlay -->
    <div class="loading-overlay" id="loadingOverlay">
        <div class="loading-content">
            <div class="spinner-border mb-3" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
            <h5>Enviando Solicitud...</h5>
            <p class="text-muted mb-0">Por favor espere mientras procesamos su solicitud</p>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Variables
        let isSubmitting = false;
        const DRAFT_KEY = 'solicitudRetiroDraft';
        const form = document.getElementById('solicitudForm');

        // Inicialización
        document.addEventListener('DOMContentLoaded', function() {
            setupForm();
            setupValidation();
            setMinDate();
            guardarAutomáticamente();
            mostrarBanner();
        });

        // Configurar formulario
        function setupForm() {
            const form = document.getElementById('solicitudForm');
            
            form.addEventListener('submit', async function(event) {
                event.preventDefault();
                event.stopPropagation();

                if (!form.checkValidity()) {
                    form.classList.add('was-validated');
                    showAlert('Por favor complete todos los campos requeridos correctamente', 'danger');
                    return;
                }

                if (isSubmitting) return;

                await enviarSolicitud();
            });

            // Auto-formatear teléfono
            document.getElementById('contactoTelefono').addEventListener('input', function(e) {
                let phone = e.target.value.replace(/[^\d]/g, '');
                if (phone.startsWith('56')) {
                    phone = '+' + phone.slice(0, 2) + ' ' + phone.slice(2, 3) + ' ' + phone.slice(3, 7) + ' ' + phone.slice(7, 11);
                } else if (phone.length === 9 && phone.startsWith('9')) {
                    phone = '+56 ' + phone.slice(0, 1) + ' ' + phone.slice(1, 5) + ' ' + phone.slice(5, 9);
                } else if (phone.length > 0) {
                    phone = '+56 ' + phone;
                }
                e.target.value = phone;
            });
        }

        // Configurar validaciones
        function setupValidation() {
            // Validación en tiempo real
            const inputs = document.querySelectorAll('.form-control, .form-select');
            inputs.forEach(input => {
                input.addEventListener('blur', function() {
                    if (this.checkValidity()) {
                        this.classList.remove('is-invalid');
                        this.classList.add('is-valid');
                    } else {
                        this.classList.remove('is-valid');
                        this.classList.add('is-invalid');
                    }
                });

                input.addEventListener('input', function() {
                    if (this.classList.contains('is-invalid') && this.checkValidity()) {
                        this.classList.remove('is-invalid');
                        this.classList.add('is-valid');
                    }
                });
            });

            // Validación de cantidad
            document.getElementById('cantidad').addEventListener('input', function() {
                const value = parseFloat(this.value);
                if (value <= 0) {
                    this.setCustomValidity('La cantidad debe ser mayor a 0');
                } else {
                    this.setCustomValidity('');
                }
            });
        }

        // Establecer fecha mínima (hoy)
        function setMinDate() {
            const today = new Date();
            const minDate = today.toISOString().split('T')[0];
            document.getElementById('fechaPreferida').setAttribute('min', minDate);
        }

        // Enviar solicitud
        async function enviarSolicitud() {
            isSubmitting = true;
            showLoading(true);
            
            try {
                const formData = new FormData(document.getElementById('solicitudForm'));
                
                const solicitudData = {
                    tipoResiduo: formData.get('tipoResiduo'),
                    cantidad: formData.get('cantidad'),
                    unidad: formData.get('unidad'),
                    descripcion: formData.get('descripcion'),
                    fechaPreferida: formData.get('fechaPreferida') || null,
                    urgencia: formData.get('urgencia'),
                    ubicacion: formData.get('ubicacion'),
                    direccionEspecifica: formData.get('direccionEspecifica'),
                    contactoNombre: formData.get('contactoNombre'),
                    contactoTelefono: formData.get('contactoTelefono'),
                    observaciones: formData.get('observaciones')
                };

                console.log('Enviando solicitud:', solicitudData);

                const response = await fetch('/api/clientes/solicitudes', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(solicitudData)
                });

                const result = await response.json();

                if (response.ok && result.success) {
                    showAlert('¡Solicitud enviada exitosamente! Será contactado pronto.', 'success');
                    
                    // Limpiar formulario
                    document.getElementById('solicitudForm').reset();
                    document.getElementById('solicitudForm').classList.remove('was-validated');
                    
                    // Redireccionar después de 3 segundos
                    setTimeout(() => {
                        window.location.href = '/clientes/solicitudes';
                    }, 3000);
                    
                } else {
                    throw new Error(result.message || 'Error al enviar la solicitud');
                }

            } catch (error) {
                console.error('Error enviando solicitud:', error);
                showAlert('Error al enviar la solicitud: ' + error.message, 'danger');
            } finally {
                isSubmitting = false;
                showLoading(false);
            }
        }

        // Mostrar/ocultar loading
        function showLoading(show) {
            const overlay = document.getElementById('loadingOverlay');
            const submitBtn = document.getElementById('submitBtn');
            
            if (show) {
                overlay.style.display = 'flex';
                submitBtn.disabled = true;
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Enviando...';
            } else {
                overlay.style.display = 'none';
                submitBtn.disabled = false;
                submitBtn.innerHTML = '<i class="fas fa-paper-plane"></i> Enviar Solicitud';
            }
        }

        // Mostrar alertas
        function showAlert(message, type) {
            const alertContainer = document.getElementById('alertContainer');
            const alertId = 'alert_' + Date.now();
            
            const alertHtml = `
                <div class="alert-custom alert-${type} fade-in-up" id="${alertId}">
                    <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'danger' ? 'exclamation-triangle' : 'info-circle'}"></i>
                    <div>
                        <strong>${type === 'success' ? '¡Éxito!' : type === 'danger' ? 'Error' : 'Información'}</strong>
                        <div>${message}</div>
                    </div>
                </div>
            `;
            
            alertContainer.innerHTML = alertHtml;
            
            // Scroll al alert
            alertContainer.scrollIntoView({ behavior: 'smooth', block: 'center' });
            
            // Auto-ocultar después de 5 segundos para success
            if (type === 'success') {
                setTimeout(() => {
                    const alert = document.getElementById(alertId);
                    if (alert) {
                        alert.style.opacity = '0';
                        setTimeout(() => alert.remove(), 300);
                    }
                }, 5000);
            }
        }

        // Shortcuts de teclado
        document.addEventListener('keydown', function(e) {
            // Ctrl+Enter para enviar
            if (e.ctrlKey && e.key === 'Enter') {
                e.preventDefault();
                document.getElementById('submitBtn').click();
            }
            
            // Esc para cancelar
            if (e.key === 'Escape' && !isSubmitting) {
                if (confirm('¿Desea cancelar y volver a la lista de solicitudes?')) {
                    window.location.href = '/clientes/solicitudes';
                }
            }
        });

        // --- Script para el menú de usuario (copiado de cotizaciones) ---
        function toggleDropdown() {
            const dropdown = document.getElementById('userDropdownMenu');
            dropdown.classList.toggle('show');
        }
        document.addEventListener('click', function(e) {
            const dropdown = document.getElementById('userDropdownMenu');
            const button = document.getElementById('userDropdown');
            if (!button.contains(e.target) && !dropdown.contains(e.target)) {
                dropdown.classList.remove('show');
            }
        });

        // Confirmar antes de salir si hay datos en el formulario
        window.addEventListener('beforeunload', function(e) {
            const form = document.getElementById('solicitudForm');
            if (!form) return;
            const formData = new FormData(form);
            let hasData = false;
            for (let [key, value] of formData.entries()) {
                if (value.trim() !== '') {
                    hasData = true;
                    break;
                }
            }
            if (hasData && !window.isSubmitting) {
                e.preventDefault();
                e.returnValue = '¿Está seguro de que desea salir? Es posible que los cambios no se guarden.';
                return e.returnValue;
            }
        });

        // Guardar automáticamente en localStorage
        if (form) {
            form.addEventListener('input', function() {
                const data = Object.fromEntries(new FormData(form).entries());
                localStorage.setItem(DRAFT_KEY, JSON.stringify(data));
            });
        }

        // Mostrar banner si hay borrador guardado y el form está vacío
        function mostrarBanner() {
            const draft = localStorage.getItem(DRAFT_KEY);
            if (draft && form && isFormEmpty(form)) {
                document.getElementById('draftBanner').style.display = 'block';
            }
        }

        // Recuperar borrador
        const recoverBtn = document.getElementById('recoverDraftBtn');
        if (recoverBtn) {
            recoverBtn.onclick = function() {
                const draft = localStorage.getItem(DRAFT_KEY);
                if (draft && form) {
                    const data = JSON.parse(draft);
                    for (const [key, value] of Object.entries(data)) {
                        const field = form.elements[key];
                        if (field) field.value = value;
                    }
                }
                document.getElementById('draftBanner').style.display = 'none';
            };
        }
        // Descartar borrador
        const discardBtn = document.getElementById('discardDraftBtn');
        if (discardBtn) {
            discardBtn.onclick = function() {
                localStorage.removeItem(DRAFT_KEY);
                document.getElementById('draftBanner').style.display = 'none';
            };
        }
        // Borrar borrador al enviar
        if (form) {
            form.addEventListener('submit', function() {
                localStorage.removeItem(DRAFT_KEY);
            });
        }
        // Función para saber si el form está vacío
        function isFormEmpty(form) {
            for (const el of form.elements) {
                if (el.tagName === 'INPUT' || el.tagName === 'TEXTAREA' || el.tagName === 'SELECT') {
                    if (el.value && el.value.trim() !== '') return false;
                }
            }
            return true;
        }
    </script>
