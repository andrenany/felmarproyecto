                        <div class="card-icon success">
                            <i class="fas fa-check-circle"></i>
                        </div>
                        <div class="card-info">
                            <h6>Completadas</h6>
                            <h2 class="success" id="completadasCount"><%= typeof stats !== 'undefined' ? stats.completadas : 0 %></h2>
                        </div>
                    </div>
                </div>

                <div class="stats-card danger fade-in-up stagger-4">
                    <div class="card-content">
                        <div class="card-icon danger">
                            <i class="fas fa-times-circle"></i>
                        </div>
                        <div class="card-info">
                            <h6>Canceladas</h6>
                            <h2 class="danger" id="canceladasCount"><%= typeof stats !== 'undefined' ? stats.canceladas : 0 %></h2>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Table Section -->
            <div class="table-section fade-in-up">
                <div class="table-header">
                    <h5 class="table-title">
                        <i class="fas fa-list"></i>
                        Lista de Solicitudes
                    </h5>
                    <div class="table-actions">
                        <button class="btn-refresh" onclick="cargarSolicitudes()">
                            <i class="fas fa-sync-alt"></i>
                            Actualizar
                        </button>
                        <a href="/clientes/solicitudes/nueva" class="btn-new-request">
                            <i class="fas fa-plus-circle"></i>
                            Nueva Solicitud
                        </a>
                    </div>
                </div>

                <div class="table-container">
                    <div class="table-responsive">
                        <table class="table table-custom">
                            <thead>
                                <tr>
                                    <th>NÚMERO</th>
                                    <th>FECHA</th>
                                    <th>ESTADO</th>
                                    <th>TIPO DE RESIDUO</th>
                                    <th>CANTIDAD</th>
                                    <th>DIRECCIÓN</th>
                                    <th>ACCIONES</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (typeof solicitudes !== 'undefined' && solicitudes.length > 0) { %>
                                    <% solicitudes.forEach(solicitud => { %>
                                        <% 
                                            let statusClass = '';
                                            let statusIcon = '';
                                            const estado = solicitud.estado.toLowerCase();
                                            if (estado === 'pendiente') {
                                                statusClass = 'status-pendiente';
                                                statusIcon = 'fas fa-clock';
                                            } else if (estado === 'confirmada') {
                                                statusClass = 'status-confirmada';
                                                statusIcon = 'fas fa-check-circle';
                                            } else if (estado === 'completada') {
                                                statusClass = 'status-completada';
                                                statusIcon = 'fas fa-check-double';
                                            } else if (estado === 'cancelada') {
                                                statusClass = 'status-cancelada';
                                                statusIcon = 'fas fa-times-circle';
                                            }
                                        %>
                                        <tr>
                                            <td><strong><%= solicitud.numero_solicitud %></strong></td>
                                            <td><%= new Date(solicitud.createdAt).toLocaleDateString('es-ES') %></td>
                                            <td>
                                                <span class="status-badge <%= statusClass %>">
                                                    <i class="<%= statusIcon %> me-1"></i>
                                                    <%= solicitud.estado.charAt(0).toUpperCase() + solicitud.estado.slice(1) %>
                                                </span>
                                            </td>
                                            <td><%= solicitud.tipo_residuo %></td>
                                            <td><%= solicitud.cantidad %> <%= solicitud.unidad %></td>
                                            <td><%= solicitud.direccion_especifica %></td>
                                            <td>
                                                <a href="/clientes/solicitudes/<%= solicitud.id %>" class="btn-action">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="7" class="text-center no-data">
                                            <i class="fas fa-folder-open"></i>
                                            <p>Aún no tienes solicitudes registradas.</p>
                                            <a href="/clientes/solicitudes/nueva" class="btn btn-primary-custom">Crear mi primera solicitud</a>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- MODAL MEJORADO -->
    <div class="modal fade" id="detallesModal" tabindex="-1" aria-labelledby="detallesModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="detallesModalLabel">
                        <i class="fas fa-eye"></i>
                        Detalles de la Solicitud
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                <div class="modal-body" id="detallesModalBody">
                    <!-- Contenido dinámico -->
                </div>
            </div>
        </div>
    </div>

    <!-- SCRIPTS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            console.log('🟢 Página de solicitudes cargada.');
        });

        function showAlertBar(message, icon = 'fa-info-circle', color = '#17a2b8', duration = 3000) {
            const alertBarContainer = document.getElementById('alertBarContainer');
            if (!alertBarContainer) return;
            
            const alertId = 'alertBar_' + Date.now();
            
            alertBarContainer.innerHTML = `
                <div class="alert-bar" id="${alertId}" style="animation: slideDown 0.5s ease-out;">
                    <i class="fas ${icon}" style="color: ${color};"></i>
                    <span class="alert-bar-text">${message}</span>
                </div>
            `;

            if (duration > 0) {
                setTimeout(() => {
                    const alertBar = document.getElementById(alertId);
                    if (alertBar) {
                        alertBar.style.opacity = '0';
                        alertBar.style.transform = 'translateY(-20px)';
                        setTimeout(() => {
                            alertBar.remove();
                        }, 300);
                    }
                }, duration);
            }
        }
        
        // La lógica para mostrar los detalles del modal y refrescar
        // se puede añadir aquí si es necesario, pero sin datos hardcodeados.
    </script>
</body>
</html>